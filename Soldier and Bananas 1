import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
        int s=sc.nextInt();
        int a=sc.nextInt();
        int n=sc.nextInt();
        int d=0;
        for(int i=1;i<=n;i++){
            d+=s*i;
        }
        if(d>=a){
            d=d-a;
        }
        else{
            d=0;
        }
        System.out.println(d);
    }
}
